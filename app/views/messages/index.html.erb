<nav class="navbar navbar-expand-lg navbar-light indigo">
  <a class="navbar-brand" href="#"><i class="fas fa-church fa-3x"></i></a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText"
    aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarText">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <%= link_to 'Dashboard', root_path, class: "nav-link" %>
      </li>
    </ul>
    <span class="navbar-text white-text">
       Church2.0 Mass Messages
    </span>
  </div>
</nav>
<div class="container">
<h1>Messages</h1>

<table class="table table-striped table-dark table-responsive table-bordered">
  <thead>
    <tr>
      <th>Message</th>
      <th>Time Sent</th>
      <th>Users Reached</th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.body %></td>
        <td><%= message.created_at %></td>
        <td><%= message.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if @users.count > 0 %>
  <div class="btn btn-primary">
    <%= link_to 'New Message', new_message_path %>
  </div>
  <% else %>
  <div class="jumbotron">
    <h1>Unable to create messages. You do not have any active users, who allow SMS.</h1>
  </div>
  <% end %>

</div>