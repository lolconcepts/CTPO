<div class="container">
<h1 class="m-2 text-xl">Previously Sent Messages</h1>

<table class="table table-striped table-dark table-responsive table-bordered">
  <thead>
    <tr>
      <th>Message</th>
      <th>Time Sent</th>
      <th>Users Reached</th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.body %></td>
        <td><%= message.created_at.to_formatted_s(:long) %></td>
        <td><%= message.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if @users.count > 0 %>
  <span class="px-2 py-1 text-blue-800 text-xs leading-4 font-medium bg-blue-100 rounded-full">
    <%= link_to 'New Message', new_message_path %>
  </span>
  <% else %>
  <div class="jumbotron">
    <h1>Unable to create messages. You do not have any active users, who allow SMS.</h1>
  </div>
  <% end %>

</div>