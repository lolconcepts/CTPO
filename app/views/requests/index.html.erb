<p id="notice"><%= notice %></p>

<h1 class="text-xl text-white">Prayer Requests</h1>
<span class="text-lg text-white">When complete, click icon under tools to remove.</span>

<div class="table table-bordered text-center bg-white" id="requests">
  <table>
  <thead>
    <tr>
      <th>Who</th>
      <th>Reason</th>
      <th>Call back</th>
      <th>Visit</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Tools</th>
    </tr>
  </thead>

  <tbody>
    <% @requests.each do |request| %>
      <tr>
        <td><%= request.who %></td>
        <td><%= request.reason %></td>
        <td>
          <% if request.call_back %>
          <i class="far fa-check-circle"></i>
            <% else %>
            No
          <% end %>  
        </td>
        <td>
          <% if request.visit %>
            <i class="far fa-check-circle"></i>
            <% else %>
            No
          <% end %>
        </td>
        <td>
          <% if request.email %>
          <%= request.email %>
            <% else %>
            No Email Provided
          <% end %>
        </td>
        <td><%= request.phone %></td>
        <td><%= link_to '<i class="fas fa-clipboard-check"></i>'.html_safe, request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

