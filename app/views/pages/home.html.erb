

    <div class="jumbotron jumbotron-fluid text-center">
       <h1 class="display-4">
        <% if @church %>
        <%= @church.name %>
        <% end %>

      &nbsp;</h1>
       <p class="lead">Welcome&nbsp;</p>
       <hr class="my-4">
