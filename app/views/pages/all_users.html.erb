<h1>Listing of Parishioners</h1>
<table class="table">
	<thead>
		<tr>
			<td></td>
			<td>Name</td>
			<td>Address</td>
			<td>City</td>
			<td>Email</td>
			<td>Phone</td>
			<td>Skills</td>
			<% if current_user.finance %>
				<td>Year To Date Online Gifts</td>
			<% end %>
		</tr>
	</thead>
<% @users.each do |user| %>
	<tr>
			<td><%= link_to '<i class="fas fa-id-card-alt"></i> Print NameTag'.html_safe, nametag_path(:uid => user.id) %> | <%= link_to 'Make Admin', adminify_path(:id => user.id) %>
			</td>
			<td><%= user.fullname%>
			<% if user.admin %>
				<span class="badge badge-primary">Administrator</span>
			<% end %>
			<% if user.finance %>
				<span class="badge badge-success">Finance Team</span>
			<% end %>
			</td>
			<td><%= user.address%> </td>
			<td><%= user.city%> </td>
			<td><%= user.email%> </td>
			<td><%= user.telephone %> </td>
			<td><%= user.skill %> </td>
			<% if current_user.finance %>
				<td>$<%= user.gifts %></td>
			<% end %>
		</tr>
<% end %>
</table>