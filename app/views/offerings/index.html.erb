<h1>Offerings Received (Year-To-Date)</h1>
<table class="table table-striped">
	<thead>
		<tr>
			<td>Date</td>
			<td>Amount</td>
			<td>Donor</td>
		</tr>
	</thead>
	<% @offerings.each do |o| %>
	<tr>
		<td><%= o.created_at.strftime("%m/%d/%Y") %></td>
		<td><%= o.normalized_amount %></td>
		<% if o.uid && o.uid != "9999" %>
			<% if User.find(o.uid) %>
				<td><%= User.find(o.uid).fullname %></td>
			<% else %>
				<td>User No Longer Active</td>
			<% end %>
		<% else %>
			<td>Guest</td>
		<% end %>
	</tr>
	<% end %>
</table>
